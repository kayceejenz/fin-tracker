@model JenzFinance.Areas.Admin.ViewModels.SavingCategoryVM
<div class="modal fade" id="CreateSubCategory" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Create sub category</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            @using (Html.BeginForm("CreateSubCategory", "Savings", FormMethod.Post, new { area = "Admin", @class = "validate", novalidate = true }))
            {
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <div class="position-relative form-group">
                        <label for="Firstname" class="col-form-label">Category</label><span class="text-danger">*</span>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <div class="input-group-text">
                                    <i class="ion-android-create"></i>
                                </div>
                            </div>
                            @Html.DropDownListFor(model => model.ParentID, (IEnumerable<SelectListItem>)ViewBag.CategoryDD, "-- Select category --", new { @class = "form-control", required = true })
                            <div class="valid-feedback">
                                Nice!
                            </div>
                            <div class="invalid-feedback">
                                Category required
                            </div>
                        </div>
                        <label for="Firstname" class="col-form-label">Description</label><span class="text-danger">*</span>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <div class="input-group-text">
                                    <i class="ion-android-create"></i>
                                </div>
                            </div>
                            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter description", required = true } })
                            <div class="valid-feedback">
                                Nice!
                            </div>
                            <div class="invalid-feedback">
                                Description required
                            </div>
                        </div>
                        <label for="Firstname" class="col-form-label">Number of months</label><span class="text-danger">*</span>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <div class="input-group-text">
                                    <i class="ion-android-calendar"></i>
                                </div>
                            </div>
                            @Html.EditorFor(model => model.NumberOfMonths, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter number of months", required = true } })
                            <div class="valid-feedback">
                                Nice!
                            </div>
                            <div class="invalid-feedback">
                                Number of months required
                            </div>
                        </div>
                        <label for="Firstname" class="col-form-label">Amount per month</label><span class="text-danger">*</span>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <div class="input-group-text">
                                    <i class="fa fa-money-bill-alt"></i>
                                </div>
                            </div>
                            @Html.EditorFor(model => model.AmountPerMonthString, new { htmlAttributes = new { @class = "form-control input-mask-trigger", required = true , data_inputmask = "'alias': 'numeric', 'groupSeparator': ',', 'autoGroup': true, 'digits': 2, 'digitsOptional': false, 'prefix': '₦', 'placeholder': '0'",
                           im_insert = "true",
                           style = "text-align: right;"
                       } })
                            <div class="valid-feedback">
                                Nice!
                            </div>
                            <div class="invalid-feedback">
                                Amount required
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="ladda-button btn btn-shadow btn-primary" data-style="zoom-in">
                        <span class="ladda-label">Create</span>
                        <span class="ladda-spinner"></span>
                    </button>
                </div>
            }
        </div>
    </div>
</div>


