@model JenzFinance.Areas.Admin.ViewModels.UserVM
<div class="modal fade" id="Create" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Create User</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            @using (Html.BeginForm("CreateUser", "User", FormMethod.Post, new { area = "Admin", @class = "validate", novalidate = true }))
            {
                @Html.AntiForgeryToken()
            <div class="modal-body">
                <div class="position-relative form-group">
                    <label for="Firstname" class="col-form-label">First name</label><span class="text-danger">*</span>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <div class="input-group-text">
                                <i class="ion-person"></i>
                            </div>
                        </div>
                        @Html.EditorFor(model => model.Firstname, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter first name", required = true } })
                        <div class="valid-feedback">
                            Nice name!
                        </div>
                        <div class="invalid-feedback">
                            First name required
                        </div>
                    </div>
                </div>
                <div class="position-relative form-group">
                    <label for="Lastname" class="col-form-label">Last name</label><span class="text-danger">*</span>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <div class="input-group-text">
                                <i class="ion-person"></i>
                            </div>
                        </div>
                        @Html.EditorFor(model => model.Lastname, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter last name", required = true } })
                        <div class="valid-feedback">
                            Nice name!
                        </div>
                        <div class="invalid-feedback">
                            Last name required
                        </div>
                    </div>
                </div>
                <div class="position-relative form-group">
                    <label for="Email" class="col-form-label">E-mail address</label><span class="text-danger">*</span>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <div class="input-group-text">
                                <i class="ion-email"></i>
                            </div>
                        </div>
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control input-mask-trigger", placeholder = "Enter email address", required = true,pattern= "[a-z0-9._%+-]+@[a-z0-9.-]+.[a-z]{2,3}$", data_inputmask = "'alias': 'email'", im_insert = "true" } })
                        <div class="valid-feedback">
                            Nice!
                        </div>
                        <div class="invalid-feedback">
                            Valid E-mail address required
                        </div>
                    </div>
                </div>
                <div class="position-relative form-group">
                    <label for="PhoneNumber" class="col-form-label">Phone number</label><span class="text-danger">*</span>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <div class="input-group-text">
                                <i class="ion-android-phone-portrait"></i>
                            </div>
                        </div>
                        @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Phone number", required = true } })
                        <div class="valid-feedback">
                            Nice number!
                        </div>
                        <div class="invalid-feedback">
                            Phone number required
                        </div>
                    </div>
                </div>
                <div class="position-relative form-group">
                    <label for="Address" class="col-form-label">Address</label><span class="text-danger">*</span>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <div class="input-group-text">
                                <i class="ion-pin"></i>
                            </div>
                        </div>
                        @Html.TextAreaFor(model => model.Address, 0, 3, new { @class = "form-control", placeholder = "Enter address", required = true })
                        <div class="valid-feedback">
                            Nice location!
                        </div>
                        <div class="invalid-feedback">
                            Address required
                        </div>
                    </div>
                </div>
                <div class="divider"></div>
                <div class="position-relative form-group">
                    <label for="Username" class="col-form-label">Username</label><span class="text-danger">*</span>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <div class="input-group-text">
                                <i class="ion-person"></i>
                            </div>
                        </div>
                        @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Username", required = true } })
                        <div class="valid-feedback">
                            Unique!
                        </div>
                        <div class="invalid-feedback">
                            Username required
                        </div>
                    </div>
                </div>
                <div class="position-relative form-group">
                    <label for="RoleID" class="col-form-label">Role</label><span class="text-danger">*</span>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <div class="input-group-text">
                                <i class="ion-android-attach"></i>
                            </div>
                        </div>
                        @Html.DropDownListFor(model => model.RoleID, (IEnumerable<SelectListItem>)ViewBag.Roles, "-- Select role --", new { @class = "form-control", required = true })
                        <div class="valid-feedback">
                            Nice!
                        </div>
                        <div class="invalid-feedback">
                            Role required
                        </div>
                    </div>
                </div>
                <div class="position-relative form-group">
                    <label for="Password" class="col-form-label">Password</label><span class="text-danger">*</span>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <div class="input-group-text">
                                <i class="ion-android-lock"></i>
                            </div>
                        </div>
                        @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = "Enter password", required = true })
                        <div class="valid-feedback">
                            Nice!
                        </div>
                        <div class="invalid-feedback">
                            Password required
                        </div>
                    </div>
                </div>
                <div class="position-relative form-group">
                    <label for="PasswordSalt" class="col-form-label">Re-type paasword</label><span class="text-danger">*</span>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <div class="input-group-text">
                                <i class="ion-android-lock"></i>
                            </div>
                        </div>
                        @Html.PasswordFor(model => model.PasswordSalt, new { @class = "form-control", placeholder = "Re-enter password", required = true })
                        <div class="valid-feedback">
                            Nice!
                        </div>
                        <div class="invalid-feedback">
                            Password don't match
                        </div>
                    </div>
                </div>
            </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="ladda-button btn btn-shadow btn-primary" data-style="zoom-in">
                        <span class="ladda-label">Create</span>
                        <span class="ladda-spinner"></span>
                    </button>
                </div>
            }
        </div>
    </div>
</div>

